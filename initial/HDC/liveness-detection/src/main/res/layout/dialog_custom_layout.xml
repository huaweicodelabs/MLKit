<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:focusable="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:background="@drawable/dl_default"
        android:orientation="vertical" >

        <com.huawei.hms.mlkit.vision.livenessdetection.test.ui.MediumBoldTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:text="隐私声明"
            android:textColor="#E5000000"
            android:textSize="20sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:background="#00ffffff"
                android:id="@+id/message"
                android:textColor="#E5000000"
                android:textSize="16sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:paddingBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal" >

            <com.huawei.hms.mlkit.vision.livenessdetection.test.ui.MediumBoldTextView
                android:layout_weight="1"
                android:id="@+id/positiveTextView"
                android:textColor="#0A59F7"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:stateListAnimator="@null"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:text="取消"
                android:clickable="true"/>

            <View
                android:id="@+id/split"
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:background="#33000000" />

            <com.huawei.hms.mlkit.vision.livenessdetection.test.ui.MediumBoldTextView
                android:layout_weight="1"
                android:id="@+id/negativeTextView"
                android:textColor="#0A59F7"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:stateListAnimator="@null"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:text="同意"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>